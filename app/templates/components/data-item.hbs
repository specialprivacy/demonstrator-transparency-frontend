{{paper-icon (if item.ok "check" "not interested") class=(concat "data-item-icon" (if item.ok " ok" " nok"))}}
{{#paper-card class="card" as |card|}}

  <div class="header">
    <span class="date">
      {{item.formattedTimestamp}}
    </span>
  </div>

  <div class="process">
    <h2>{{item.process}}</h2>
  </div>

  <div class="message">
    {{item.message}}
  </div>

  <div class="list">
    Purpose:
    <ul>
      <li>{{item.purpose}}</li>
    </ul>
  </div>

  <div class="list">
    Processing:
    <ul>
      <li>{{item.processing}}</li>
    </ul>
  </div>

  <div class="list">
    Recipient:
    <ul>
      <li>{{item.recipient}}</li>
    </ul>
  </div>

  <div class="list">
    Storage:
    <ul>
      <li>{{item.storage}}</li>
    </ul>
  </div>

  <div class="list">
    Data:
    <ul>
      {{#each item.dataCollection as |data|}}
        <li>{{data}}</li>
      {{/each}}
    </ul>
  </div>

  <div class="footer">
    <div class="item-id">
      Event "{{item.id}}"
    </div>
  </div>



{{/paper-card}}
